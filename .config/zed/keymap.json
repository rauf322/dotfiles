[
  {
    "context": "Editor && (vim_mode == normal || vim_mode == visual) && !VimWaiting && !menu",
    "bindings": {
      "shift-k": "editor::Hover",
      "space c a": "editor::ToggleCodeActions",
      "space s": "editor::Format",
      "space r n": "editor::Rename",
      "space shift-d": "diagnostics::Deploy",
      "space p s": "pane::DeploySearch",
      "space b": "tab_switcher::Toggle",
      "space f f": "project_panel::ToggleFocus",
      "space g c": "editor::ToggleComments",
      "space g g": "git_panel::ToggleFocus",
      "space space": "command_palette::Toggle",
      "space g t": "editor::GoToTypeDefinition",
      "space g d": "editor::GoToDefinition",
      "space g r": "editor::FindAllReferences",
      "space e": "workspace::ToggleLeftDock",
      "space tab": "file_finder::Toggle",
      "shift-h": "tab_switcher::ToggleAll",
      "space shift-P": "agent::ToggleFocus",
      "space |": "pane::SplitVertical",
      "space -": "pane::SplitHorizontal",
      "space h": "workspace::ActivatePaneLeft",
      "space j": "workspace::ActivatePaneDown",
      "space k": "workspace::ActivatePaneUp",
      "space l": "workspace::ActivatePaneRight",
      "space w shift-h": "workspace::MovePaneLeft",
      "space w shift-j": "workspace::MovePaneDown",
      "space w shift-k": "workspace::MovePaneUp",
      "space w shift-l": "workspace::MovePaneRight",
      "space w h": "vim::ResizePaneRight",
      "space w l": "vim::ResizePaneLeft",
      "space w j": "vim::ResizePaneUp",
      "space w k": "vim::ResizePaneDown",
      "space w =": "vim::ResetPaneSizes",
      "space s h": "git::StageAndNext",
      "space u h": "git::UnstageAndNext"
    }
  },
  {
    "context": "Editor && vim_mode == insert && !VimWaiting && !menu",
    "bindings": {
      "j k": "vim::NormalBefore",
      "k k": "vim::NormalBefore",
      "h h": "vim::NormalBefore"
    }
  },
  {
    "context": "Editor && vim_mode == visual && !VimWaiting && !menu",
    "bindings": {
      "shift-k": "editor::MoveLineUp",
      "shift-j": "editor::MoveLineDown"
    }
  },
  {
    "context": "ProjectPanel",
    "bindings": {
      "a": "project_panel::NewFile",
      "r": "project_panel::Rename",
      "shift-d": "project_panel::Delete",
      "space h": "workspace::ActivatePaneLeft",
      "space f f": "workspace::ToggleRightDock"
    }
  },
  {
    "context": "GitPanel",
    "bindings": {
      "space g g": "git_panel::Close",
      "x": "git::ToggleStaged",
      "shift-x": "git::StageAll",
      "shift-u": "git::UnstageAll",
      "i": "git_panel::FocusEditor",
      "j": "git_panel::NextEntry",
      "k": "git_panel::PreviousEntry",
      "space l": "workspace::ActivatePaneRight"
    }
  }
]
