#!/bin/bash

# Display wake script for sleepwatcher
# Actions to perform when display wakes up (including screen unlock)

# Log the display wake event
echo "$(date): Display woke up" >> ~/.local/scripts/logs/sleepwatcher.log

# Add a small delay to let system fully unlock
sleep 1

# Reopen apps when screen unlocks
open -a "Ghostty"
open -a "iina"
open -a "Zen"