#!/bin/bash

# Sleep script for sleepwatcher
# Actions to perform before going to sleep

# Log the sleep event (optional, for debugging)
echo "$(date): MacBook going to sleep" >> ~/.local/scripts/logs/sleepwatcher.log

# Example actions before sleep:
# - Close specific apps
# - Save work
# - Stop processes

# Example: Quit specific apps before sleep
osascript -e 'quit app "Zen"'
osascript -e 'quit app "Ghostty"'
osascript -e 'quit app "iina"'


