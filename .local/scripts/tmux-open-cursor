#!/usr/bin/env bash
set -euo pipefail
DIR="${1:-$(tmux display -p -F "#{pane_current_path}")}"

if command -v cursor >/dev/null 2>&1; then
  # reuse an existing Cursor window, suppress all output
  cursor --reuse-window -- "$DIR" >/dev/null 2>&1
else
  echo "cursor CLI not found on PATH" >&2
  exit 127
fi

